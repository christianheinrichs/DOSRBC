IF EXIST %BOOMDIR%\BOOM.EXE IF EXIST BOOM\CONFIG\*.CFG ECHO BOOM: Restoring configuration
IF EXIST %BOOMDIR%\BOOM.EXE IF EXIST BOOM\CONFIG\*.CFG XCOPY /I /Y "BOOM\CONFIG\*.CFG" "%BOOMDIR%"
IF EXIST %BOOMDIR%\BOOM.EXE IF EXIST BOOM\CONFIG\*.CFG ECHO.

IF EXIST %BOOMDIR%\BOOM.EXE IF NOT EXIST BOOM\CONFIG\*.CFG ECHO BOOM: Configuration not found. Skipping...
IF EXIST %BOOMDIR%\BOOM.EXE IF NOT EXIST BOOM\CONFIG\*.CFG ECHO.

REM Installation check, then restore savegames
IF EXIST %BOOMDIR%\BOOM.EXE IF EXIST BOOM\SAVEGAME\BOOMSAV*.DSG ECHO BOOM: Restoring savegames
IF EXIST %BOOMDIR%\BOOM.EXE IF EXIST BOOM\SAVEGAME\BOOMSAV*.DSG XCOPY /I /Y "BOOM\SAVEGAME\BOOMSAV*.DSG" %BOOMDIR%
IF EXIST %BOOMDIR%\BOOM.EXE IF EXIST BOOM\SAVEGAME\BOOMSAV*.DSG ECHO.

